generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  password   String
  characters Character[]

  @@map("Account")
}

model Character {
  id          Int       @id @default(autoincrement())
  name        String
  health      Int
  power       Int
  money       Int
  accountId   Int
  inventoryId Int       @unique
  equippedId  Int       @unique
  account     Account   @relation(fields: [accountId], references: [id])
  equipped    Equipped  @relation(fields: [equippedId], references: [id])
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
}

model Inventory {
  id          Int        @id @default(autoincrement())
  charactedId Int
  character   Character?
  items       Item[]
}

model Equipped {
  id          Int        @id @default(autoincrement())
  characterId Int
  character   Character?
  items       Item[]
}

model Item {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  inventoryId Int?
  equippedId  Int?
  equipped    Equipped?  @relation(fields: [equippedId], references: [id])
  inventory   Inventory? @relation(fields: [inventoryId], references: [id])

  @@index([equippedId], map: "Item_equippedId_fkey")
  @@index([inventoryId], map: "Item_inventoryId_fkey")
}
